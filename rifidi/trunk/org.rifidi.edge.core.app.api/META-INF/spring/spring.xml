<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/osgi 
    http://www.springframework.org/schema/osgi/spring-osgi.xsd">


	<!-- Create the application and inject esper and teh JMS sender -->
	<bean id="readZoneMonitoringApp"
		class="org.rifidi.edge.core.app.api.service.monitoring.impl.ReadZoneMonitoringServiceImpl"
		init-method="start" destroy-method="stop">
		<property name="esperService" ref="esperManagementService" />
	</bean>

	<bean id="readerUptimeMonitoringApp"
		class="org.rifidi.edge.core.app.api.service.monitoring.impl.ReaderUptimeMonitoringServiceImpl"
		init-method="start" destroy-method="stop">
		<property name="esperService" ref="esperManagementService" />
	</bean>

	<osgi:service ref="readZoneMonitoringApp"
		interface="org.rifidi.edge.core.app.api.service.monitoring.ReadZoneMonitoringService" />

	<osgi:service ref="readerUptimeMonitoringApp"
		interface="org.rifidi.edge.core.app.api.service.monitoring.ReaderUptimeMonitoringService" />

	<osgi:reference id="esperManagementService"
		interface="org.rifidi.edge.core.services.esper.EsperManagementService" />

</beans>