<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--  Create Reader Configuration Factory -->
	<bean id="configurationFactory" class="org.rifidi.edge.readerplugin.llrp.LLRPReaderFactory">
		<property name="context" ref="bundleContext" />
		<property name="template" ref="internalMB" />
		<property name="notifierService" ref="JMSNotifierService"/>
		<constructor-arg index="0">
			<ref bean="commandConfigurationFactory" />
		</constructor-arg>
	</bean>

	<!--  Create Command Configuration Factory -->
	<bean id="commandConfigurationFactory"
		class="org.rifidi.edge.readerplugin.llrp.LLRPCommandConfigurationFactory">
		<property name="context" ref="bundleContext" />
	</bean>


</beans>