<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Tag View"
            id="org.rifidi.edge.client.tagview">
      </category>
      <view
            name="Tag View"
            icon="icons/sample.gif"
            category="org.rifidi.edge.client.tagview"
            class="org.rifidi.edge.client.tagview.views.TagView"
            id="org.rifidi.edge.client.tagview.views.TagView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="opens the TagView"
            id="org.rifidi.edge.client.tagview.opentagview"
            name="Open TagView">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.rifidi.edge.client.tagview.handlers.OpenTagViewHandler"
            commandId="org.rifidi.edge.client.tagview.opentagview">
      </handler>
   </extension>

</plugin>
