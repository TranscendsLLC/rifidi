<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:amq="http://activemq.apache.org/schema/core"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/osgi 
    http://www.springframework.org/schema/osgi/spring-osgi.xsd">

	<!-- Create the  Application bean and inject dependencies-->
	<bean id="rfidapp" class="com.csc.rfid.toolcrib.ToolcribPortalApp"
		init-method="start" destroy-method="stop">
		<property name="esperService" ref="esperManagementService" />
		<property name="gpoController" ref="alienGPIOService" />
		<property name="logFile" ref="cscLogFileHandler" />
	</bean>
	
	<bean id="windowapp" class="com.csc.rfid.toolcrib.ToolcribWindowApp"
		init-method="start" destroy-method="stop">
		<property name="esperService" ref="esperManagementService" />
		<property name="gpoController" ref="alienGPIOService" />
		<property name="logFile" ref="cscLogFileHandler" />
	</bean>
	
	<bean id="doorApp" class="com.csc.rfid.toolcrib.ToolcribDoorApp"
		init-method="start" destroy-method="stop">
		<property name="esperService" ref="esperManagementService" />
		<property name="gpoController" ref="alienGPIOService" />
		<property name="logFile" ref="cscLogFileHandler" />
	</bean>
	
	<bean id="cscdowntime" class="com.csc.rfid.toolcrib.ReaderUpDownEventHandler"
		init-method="start" destroy-method="stop">
		<property name="esperService" ref="esperManagementService" />
		<property name="logFile" ref="cscLogFileHandler" />
	</bean>

	<osgi:reference id="alienGPIOService"
		interface="org.rifidi.edge.core.sensors.management.AbstractGPIOService"
		filter="(reader=Alien)" />

	<bean id="cscLogFileHandler"
		class="com.csc.rfid.toolcrib.utilities.CSCLogger" />

	<!--
		Get a reference to the Esper Management Service from the OSGi Service
		Registry
	-->
	<osgi:reference id="esperManagementService"
		interface="org.rifidi.edge.core.services.esper.EsperManagementService" />
</beans>