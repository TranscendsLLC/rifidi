<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Treeview Category"
            id="org.rifidi.edge.client.ale.treeview">
      </category>
      <view
            name="Edge Server Connections"
            icon="icons/sample.gif"
            category="org.rifidi.edge.client.ale.treeview"
            class="org.rifidi.edge.client.ale.treeview.views.AleTreeView"
            id="org.rifidi.edge.client.ale.treeview.views.AleTreeView">
      </view>
      <view
            category="org.rifidi.edge.client.ale.treeview"
            class="org.rifidi.edge.client.ale.treeview.views.LrTreeView"
            icon="icons/sample.gif"
            id="org.rifidi.edge.client.ale.treeview.LrTreeView"
            name="Logical Readers"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.rifidi.edge.client.ale.treeview.aleperspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.rifidi.edge.client.ale.treeview.views.AleTreeView">
         </view>
         <view
               id="org.rifidi.edge.client.ale.treeview.LrTreeView"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.rifidi.edge.client.ale.treeview.views.AleTreeView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.rifidi.edge.client.ale.treeview.perspective.AlePerspective"
            id="org.rifidi.edge.client.ale.treeview.aleperspective"
            name="ALE Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.rifidi.edge.client.ale.treeview.preferences.AleTreeViewPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.rifidi.edge.client.ale.treeview.preferences.AleTreeViewPreferencePage"
            id="org.rifidi.edge.client.ale.treeview.aleviewpreferencepage"
            name="Endpoints">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.rifidi.edge.client.ale.treeview.deleteremoteecspec"
            name="Delete">
      </command>
      <command
            id="org.rifidi.edge.client.ale.treeview.connectale"
            name="Connect">
      </command>
      <command
            id="org.rifidi.edge.client.ale.treeview.disconnectale"
            name="Disconnect">
      </command>
      <command
            id="org.rifidi.edge.client.ale.treeview.connectlr"
            name="Connect">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.rifidi.edge.client.ale.treeview.handlers.DeleteRemoteEcSpecHandler"
            commandId="org.rifidi.edge.client.ale.treeview.deleteremoteecspec">
      </handler>
      <handler
            class="org.rifidi.edge.client.ale.treeview.handlers.ConnectAle"
            commandId="org.rifidi.edge.client.ale.treeview.connectale">
      </handler>
      <handler
            class="org.rifidi.edge.client.ale.treeview.handlers.DisconnectAle"
            commandId="org.rifidi.edge.client.ale.treeview.disconnectale">
      </handler>
      <handler
            class="org.rifidi.edge.client.ale.treeview.handlers.ConnectLr"
            commandId="org.rifidi.edge.client.ale.treeview.connectlr">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.rifidi.edge.client.ale.treeview.views.AleTreeView?after=aletreeview">
         <command
               commandId="org.rifidi.edge.client.ale.treeview.deleteremoteecspec"
               id="UndefineRemoteEcSpec"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.rifidi.edge.client.ale.models.ecspec.RemoteSpecModelWrapper">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.rifidi.edge.client.ale.treeview.connectale"
               id="ConnectToEdgeServer"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.rifidi.edge.client.ale.models.aleserviceporttype.AleServicePortTypeWrapper">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.rifidi.edge.client.ale.treeview.disconnectale"
               id="DisconnectEdgeServer"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.rifidi.edge.client.ale.models.aleserviceporttype.AleServicePortTypeWrapper">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.rifidi.edge.client.ale.editor.editspec"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.rifidi.edge.client.ale.models.ecspec.RemoteSpecModelWrapper">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="org.rifidi.edge.client.ale.editor.newremotespec"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.rifidi.edge.client.ale.models.serviceprovider.SpecDataManager">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.rifidi.edge.client.ale.treeview.views.LrTreeView">
         <command
               commandId="org.rifidi.edge.client.ale.treeview.connectlr"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.rifidi.edge.client.ale.models.alelrserviceporttype.AleLrServicePortTypeWrapper">
                  </instanceof>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
