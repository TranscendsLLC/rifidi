<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
     http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd">
	<!--  Create Reader Sessiopn Service -->
	<bean id="readerSessionManagementImpl"
		class="org.rifidi.edge.newcore.readersession.ReaderSessionDAOImpl">
		<property name="context" ref="bundleContext" />
		<property name="readerConfigurations" ref="readerConfigurationsSet" />
	</bean>

	<!-- Put reader session service in OSGi Registry -->
	<osgi:service id="readerSessionManagement" ref="readerSessionManagementImpl"
		interface="org.rifidi.edge.newcore.readersession.ReaderSessionDAO"></osgi:service>

	<osgi:set id="readerConfigurationsSet" interface="org.rifidi.edge.newcore.readers.ReaderConfiguration"
		cardinality="0..N">
		<osgi:listener ref="readerSessionManagementImpl"
			bind-method="bind" unbind-method="unbind" />
	</osgi:set>
	
	<osgi:set id="commandFactoriesSet" interface="org.rifidi.edge.newcore.commands.CommandFactory"
		cardinality="0..N">
		<osgi:listener ref="readerSessionManagementImpl"
			bind-method="bindCommand" unbind-method="unbindCommand" />
	</osgi:set>
	
	<osgi:set id="readerFactoryConfigurationSet" interface="org.rifidi.edge.newcore.commands.CommandFactory"
		cardinality="0..N">
		<osgi:listener ref="readerSessionManagementImpl"
			bind-method="bindCommand" unbind-method="unbindCommand" />
	</osgi:set>
</beans>